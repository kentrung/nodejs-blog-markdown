<div class="mb-3">
  <label for="title">Title</label>
  <input
    required
    value="<%= article.title %>"
    type="text"
    name="title"
    id="title"
    class="form-control"
  />
</div>
<div class="mb-3">
  <label for="description">Description</label>
  <textarea
    name="description"
    id="description"
    class="form-control"
    rows="3"
  ><%= article.description %></textarea>
</div>
<div class="mb-3">
  <label for="markdown">Markdown</label>
  <textarea
    required
    name="markdown"
    id="markdown"
    class="form-control"
    rows="7"
  ><%= article.markdown %></textarea>
</div>

<button type="submit" class="btn btn-primary">Save</button>
<a href="/" class="btn btn-outline-secondary">Cancel</a>
